{% extends 'base_bo_on.html.twig' %}

{% block title %}Service index{% endblock %}

{% block content %}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="title-3 m-b-30">Services</h3>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Icon</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for service in services %}
                            <tr>
                                <td>{{ service.id }}</td>
                                <td>{{ service.name }}</td>
                                <td>{{ service.icon }}</td>
                                <td>
                                    <a href="{{ path('service_show', {'id': service.id}) }}">show</a>
                                    <a href="{{ path('service_edit', {'id': service.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-data__tool-right">
                    <a href="{{ path('service_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">Cr√©er un service</a>
                </div>
            </div>
        </div><br>

    </div>
</div>
{% endblock %}
