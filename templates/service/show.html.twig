{% extends 'base_bo_on.html.twig' %}

{% block title %}Service{% endblock %}

{% block content %}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="title-3 m-b-30">Cr√©er un service</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ service.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ service.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ service.description }}</td>
                                </tr>
                                <tr>
                                    <th>Icon</th>
                                    <td>{{ service.icon }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-lg btn-info btn-block">edit</a>
                        <a href="{{ path('service_index') }}" class="btn btn-primary btn-sm">back to list</a>

                        {{ include('service/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
