{% extends 'base_bo_on.html.twig' %}

{% block title %}Listing des articles{% endblock %}

{% block content %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title-3 m-b-30">Articles</h3>
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Date de création</th>
                                <th>Date de publication</th>
                                <th>Auteur</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for article in articles %}
                                <tr>
                                    <td>{{ article.id }}</td>
                                    <td>{{ article.title }}</td>
                                    <td>{{ article.dateCreated ? article.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                                    <td></td>
                                    <td>{{ article.user.fullname }}</td>
                                    <td>
                                        <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                                        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-data__tool-right">
                        <a href="{{ path('article_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">Créer un article</a>
                    </div>
                </div>
            </div><br>

        </div>
    </div>
{% endblock %}
