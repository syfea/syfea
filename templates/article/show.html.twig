{% extends 'base_bo_on.html.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="title-3 m-b-30">Article</h3>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ article.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ article.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Content</th>
                                        <td>{{ article.content }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date_created</th>
                                        <td>{{ article.dateCreated ? article.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Auteur</th>
                                        <td>{{ article.user.fullname }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-lg btn-info btn-block">edit</a>
                            <a href="{{ path('article_index') }}" class="btn btn-primary btn-sm">back to list</a>

                            {{ include('article/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}