{% extends 'base_bo_on.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block content %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="title-3 m-b-30">Editer une entreprise</h3>
                        </div>
                        <div class="card-body">
                            {{ include('article/_form.html.twig', {'button_label': 'Update'}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="{{ path('article_index') }}" class="btn btn-primary btn-sm">back to list</a>
                {% if article is defined %}
                    {{ include('article/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
