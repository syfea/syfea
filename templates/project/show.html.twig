{% extends 'base_bo_on.html.twig' %}

{% block title %}New Project{% endblock %}

{% block content %}
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="title-3 m-b-30">Cr√©er un projet</h3>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ project.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ project.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ project.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Url</th>
                                        <td>{{ project.url }}</td>
                                    </tr>
                                    <tr>
                                        <th>Picture</th>
                                        <td>{{ project.picture }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>{{ project.date ? project.date|date('d-m-Y H:i:s') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-lg btn-info btn-block">edit</a>
                            <a href="{{ path('project_index') }}" class="btn btn-primary btn-sm">back to list</a>

                            {{ include('project/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
