{% extends 'base_bo_on.html.twig' %}

{% block title %}Nouvelle entrepise{% endblock %}

{% block content %}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="title-3 m-b-30">Cr√©er une entrepise</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ job.id }}</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>{{ job.title }}</td>
                                </tr>
                                <tr>
                                    <th>UnderTitle</th>
                                    <td>{{ job.underTitle }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ job.description }}</td>
                                </tr>
                                <tr>
                                    <th>Position</th>
                                    <td>{{ job.position }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('job_edit', {'id': job.id}) }}" class="btn btn-lg btn-info btn-block">edit</a>
                        <a href="{{ path('job_index') }}" class="btn btn-primary btn-sm">back to list</a>

                        {{ include('job/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
