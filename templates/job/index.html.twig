{% extends 'base_bo_on.html.twig' %}

{% block title %}Listing des entreprises{% endblock %}

{% block content %}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="title-3 m-b-30">Entreprise</h3>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>UnderTitle</th>
                                <th>Position</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for job in jobs %}
                            <tr>
                                <td>{{ job.id }}</td>
                                <td>{{ job.title }}</td>
                                <td>{{ job.underTitle }}</td>
                                <td>{{ job.position }}</td>
                                <td>
                                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-data__tool-right">
                    <a href="{{ path('job_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">Cr√©er une entreprise</a>
                </div>
            </div>
        </div><br>

    </div>
</div>
{% endblock %}
