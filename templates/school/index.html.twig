{% extends 'base_bo_on.html.twig' %}

{% block title %}Listing des écoles{% endblock %}

{% block content %}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="title-3 m-b-30">Ecole</h3>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Position</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for school in schools %}
                            <tr>
                                <td>{{ school.id }}</td>
                                <td>{{ school.title }}</td>
                                <td>{{ school.position }}</td>
                                <td>
                                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-data__tool-right">
                    <a href="{{ path('school_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">Créer une école</a>
                </div>
            </div>
        </div><br>

    </div>
</div>
{% endblock %}
